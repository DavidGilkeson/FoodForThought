<% include partials/head.ejs %>
<link rel="stylesheet" type="text/css" href="searchResults.css">
</head>
<body id="searchResults">
<% include partials/navbar.ejs %>

<div class="container">
    <h2>Search Results</h2>
    <hr>
    <% result.forEach(function(results){ %>
    <form id="resultsForm" action="/nutrients" method="GET">
        <div class="form-row align-items-center">
            <div class="col-sm-4">
                <input class="form-control" type="hidden" name="foodUrl" value='<%-results.food.uri%>'><%- results.food.label %>
                <input class="form-control" type="hidden" name="foodName" value='<%-results.food.label%>'>
            </div>
            <div class="col-2">
                <input class="form-control mb-2" name="quantity" type="text" placeholder="Quantity">
            </div>
            <div class="col-auto">
                <select id="inputState" class="form-control" name="measurementUrl">Measurement
                    <option selected disabled> Measure </option>
                    <% results.measures.forEach(function(measures){%>
                        <option value='<%- result.label %>,<%- measures.uri %>'> <%- measures.label %> </option>
                    <%  }); %>
                </select>
            </div>
            <div class="col-auto">
                <input class="btn btn-primary mb-2" type="submit">
            </div>
        </div> 
    </form>
    <%  }); %>
</div>
<% include partials/footer.ejs %>