<body>
<% include partials/navbar.ejs %>

<h2>Search Results</h2>

<div id="searchResultsList">
    <div>
        <% result.forEach(function(foodType, measurement){ %>
                <form id="resultsForm" class="inline-form" action="/nutrients" method="GET">
                    <input type="hidden" name="foodType" value='<%-JSON.stringify(foodType.uri)%>'><%- JSON.stringify(foodType.label) %>
                    <input name="quantity" type="text" style="width:fit" placeholder="Enter Quantity...">
                        <select class="selectpicker" name="measurement">Measurement
                            <option selected disabled> Measure </option>
                            <% measures.forEach(function(measurement){%>
                                <option value= '<%-JSON.stringify(measurement.uri)%>'> <%-JSON.stringify(measurement.label)%> </option>
                            <%  }); %>
                        </select>
                    <input class="btn btn-default btn-primary" type="submit">
                </form>
        <%  }); %>
    </div>
</div>

