<body>
<% include partials/navbar.ejs %>

<h2>Search Results</h2>

<div id="searchResultsList">
    <div>
        <% result.forEach(function(foodType, measurement){ %>
                <form id="resultsForm" class="inline-form" action="/nutrients" method="GET">
                    <input type="hidden" name="foodType" value='<%-foodType.uri%>'><%- foodType.label %>
                    <input name="quantity" type="text" placeholder="Quantity">
                        <select id="inputState" class="form-control" name="measurement">Measurement
                            <option selected disabled> Measure </option>
                            <% measures.forEach(function(measurement){%>
                                <option value= '<%-measurement.uri%>'> <%- measurement.label %> </option>
                            <%  }); %>
                        </select>
                    <input class="btn btn-default btn-primary" type="submit">
                </form>
        <%  }); %>
    </div>
</div>

